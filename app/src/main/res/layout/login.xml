<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/padcolor"
    android:paddingRight="30dp"
    android:paddingTop="8dp"
    android:paddingLeft="30dp">

    <ImageView
        android:layout_marginTop="0dp"
        android:layout_width="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/id_appicon"
        android:background="@drawable/ic_application"
        android:layout_height="150dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_price"
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimaryDark"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_title"
        android:layout_marginTop="20dp" >

        <EditText
            android:id="@+id/txtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="รหัสผ่าน"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/colorPrimaryDark"
            android:inputType="textPassword"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/id_submit_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_price"
        android:backgroundTint="@color/colorAccent"
        android:layout_marginTop="25dp"
        android:padding="8dp"
        android:text="เข้าสู่ระบบ"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/id_submit_fb"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/id_submit_button"
        android:textSize="18dp"
        android:layout_marginTop="25dp"  />


    <!--<Button-->
        <!--android:id="@+id/id_submit_fb"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@+id/id_submit_button"-->
        <!--android:backgroundTint="#3B5998"-->
        <!--android:layout_marginTop="25dp"-->
        <!--android:padding="8dp"-->
        <!--android:text="Log in with Facebook"-->
        <!--android:textColor="#FFFFFF"-->
        <!--android:textSize="18dp" />-->

    <TextView
        android:id="@+id/linkregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_submit_fb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="สมัครสมาชิกเพื่อใช้บริการ"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />


    <TextView
        android:text="หิว... เมื่อไหร่ให้คิดถึง FoodHall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:id="@+id/textView2"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/id_appicon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:layout_alignParentRight="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/txtemail"
            android:textColor="@color/colorPrimaryDark"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaryDark"
            android:hint="อีเมลล์/เบอร์โทรศัพท์"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>
