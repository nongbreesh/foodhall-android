<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/txtotp"
                    android:layout_width="200dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:maxLength="5"
                    android:inputType="number"
                    android:textSize="32dp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/txtsubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_weight="1"
                android:text="พิมพ์รหัสที่ได้จาก SMS เบอร์ 0863647397 (รหัสใช้ได้เพียงครั้งเดียว)"
                android:textAlignment="center" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView01"
                android:orientation="horizontal"
                android:paddingBottom="1.0dip"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:paddingTop="5.0dip">

                <Button
                    android:id="@+id/id_resend_button"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/id_tel"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/padcolor"
                    android:padding="12dp"
                    android:text="ขอรหัสใหม่"
                    android:textColor="#838383"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/id_submit_button"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/id_tel"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.0"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:padding="12dp"
                    android:text="ยืนยัน"
                    android:textColor="#fff"
                    android:textSize="24dp" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
